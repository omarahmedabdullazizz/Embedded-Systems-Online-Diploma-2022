// This Program checks whether the INPUT number is Positive OR Negative

#include <stdio.h>
int main()
{
	float x;

	printf("Enter a Number: ");
	fflush(stdin); fflush(stdout);
	scanf("%f", &x);

	if (x>0)
	{
		printf("\n%f is Positive", x);
	}
	else
		printf("\n%f is Negative", x);
return 0;
}
